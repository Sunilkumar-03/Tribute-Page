<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>Tribute Page</title>
    <link href="~/css/HomePage.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">

</head>
<body>
    <div class="container" style="max-width:100%!important">
        <div class="navbar">
            <a asp-action="Index" asp-controller="Home">
                <img src="~/Images/Logo2.png" class="logo" />
                </a>
                <nav>
                    <ul>
                        <li>
                            <a asp-action="Login" asp-controller="Admin">Login</a>
                        </li>
                        <li>
                            <a asp-action="Register" asp-controller="Admin">SignUp</a>
                        </li>
                        <li>
                            <a asp-action="About" asp-controller="Home">Contact Us</a>
                        </li>
                    </ul>
                </nav>
        </div>
        <div class="row">
            <div class="col">
                <h1>Tribute</h1>
                <p>
                    Don't read success story, you will only get a message, Read failure stories,<br /> you will get some ideas to get success
                </p>
                <button onclick="location.href='@Url.Action("Login", "Admin")'" type="button">Explore new Tribute</button>
            </div>
            <div class="col1" style="margin-left:10%!important">
                @RenderBody()
            </div>
        </div>
</body>
</html>

