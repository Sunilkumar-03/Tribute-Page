@model Tribute_MVC.Models.DataViewModel.TributeDataView

@{
    ViewData["Title"] = "AddTribute";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Main CSS-->
    <link href="~/css/AddTribute.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="wrapper wrapper--w900">
        <div class="card card-6">
            <div class="card-heading">
                <h2 style="color:rebeccapurple" class="title">Post Tribute</h2>
            </div>
            <div class="card-body">
                

                <form asp-action="AddTribute" asp-controller="User" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <span class="text-danger" style="color:red">@ViewBag.Error</span>
                        <span class="text-success" style="color: green">@ViewBag.Success</span>
                    </div>
                    <div class="form-row">
                        <div class="name">Title</div>
                        <div class="value">
                            <input asp-for="Name" class="input--style-6 form-control" type="text" name="name" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Abstract</div>
                        <div class="value">
                            <div class="input-group">
                                <textarea asp-for="Abstract" maxlength="200" class="textarea--style-6 form-control" name="abstract" required></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Description</div>
                        <div class="value">
                            <div class="input-group">
                                <textarea asp-for="Description" maxlength="2000" class="textarea--style-6 form-control" name="description" required></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Reffernce Link</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="RefferenceLink" class="input--style-6 form-control" type="text" name="RefferenceLink" placeholder="google.com" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Category</div>
                        <div class="value">
                            <div class="input-group">
                                <select asp-items=@ViewBag.generList asp-for="CategoryId" class="form-control" required></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Upload Pic</div>
                        <div class="value">
                            <div class="input-group js-input-file">
                                <input asp-for="Image" class="form-control" required />
                            </div>
                            <div class="label--desc">Upload Picture  Max file size 5 MB</div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button class="btn btn--radius-2 btn--blue-2" type="submit">Post</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/js/global.js"></script>

</body>

</html>

