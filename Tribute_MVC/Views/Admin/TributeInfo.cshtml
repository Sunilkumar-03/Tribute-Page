@model Tribute_MVC.Models.Tribute

@{
    ViewData["Title"] = "TributeInfo";
    Layout = "~/Views/Shared/_beforeLogin.cshtml";
}


@{
    Layout = "_beforeLogin";
}
<style>
    .card-tribute {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 500px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card-tribute button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card-tribute button:hover {
            opacity: 0.7;
        }
</style>

<div class="card-tribute-tribute">
    <img src="~/Layout/img/@Model.ImageUrl" alt="Denim Jeans" style="width:225px; height: 225px;">
    <h1>@Model.Name</h1>
<p>@Model.Abstract</p>
</div>